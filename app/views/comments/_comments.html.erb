<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="well">
    <p><strong><%= comment.username %></strong>: <%= comment.body %>
    <%= link_to 'Delete Comment', [comment.post, comment],
    method: :delete,
          data: {confirm: 'You sure?'},
          :class => 'btn btn-danger'  %>
  </div>
<% end%>
